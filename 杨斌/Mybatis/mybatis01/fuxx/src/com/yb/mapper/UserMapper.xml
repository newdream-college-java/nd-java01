<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yb.mapper.UserMapper">
	<sql id="LISTALL_FINL">uid,uname,upass</sql>
	<select id="listAll" resultType="user">
		select <include refid="LISTALL_FINL"/> from user;
	</select>
	<insert id="addUser" parameterType="user">
		<selectKey keyProperty="uid" order="AFTER" resultType="int">
			select last_insert_id();
		</selectKey>
		insert into User
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="uname!=null">
				uname,
			</if>
			<if test="upass!=null">
				upass,
			</if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="uname!=null">
				#{uname},
			</if>
			<if test="upass!=null">
				#{upass},
			</if>
		</trim>
	</insert>
	<update id="modifyUser" parameterType="user">
		update User
		<set>
			<if test="uname!=null">
				uname=#{uname},
			</if>
			<if test="upass!=null">
				upass=#{upass},
			</if>
		</set>
		where uid = #{uid}
	</update>
	<delete id="removeUser" parameterType="User">
		delete from user where uid = #{uid}
	</delete>
</mapper>