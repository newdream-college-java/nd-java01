<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="newdream">
	<sql id="qb">
		uid,uname,upass
	</sql>
	<select id="list" resultType="u">
		select <include refid="qb"/> from users
	</select>
	<insert id="add" parameterType="entity.Users">
		<selectKey keyProperty="uid" order="AFTER" resultType="int" >
			select last_insert_id()
		</selectKey>
		insert into users 
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="uname!=null">
				uname,
			</if>
			<if test="upass!=null">
				upass,
			</if>
						</trim>
			values
			<trim prefix="(" suffix=")" suffixOverrides=",">
				<if test="uname!=null">
				#{uname},
			</if>
			<if test="upass!=null">
				#{upass},
			</if>
		</trim>
	</insert>
	<update id="update" parameterType="entity.Users">
				update users 
			<set>
				<if test="uname!=null">
				uname=#{uname},
			</if>
			<if test="upass!=null">
				upass=#{upass},
			</if>
			</set>
			where uid=#{uid}
	</update>
</mapper>