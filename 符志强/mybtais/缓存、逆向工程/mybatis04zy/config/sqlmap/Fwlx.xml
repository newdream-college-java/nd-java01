<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="newdream">
	<sql id="qb">
		lxid,fwlx
	</sql>
	<select id="list" resultType="fwlx">
		select <include refid="qb"/> from fwlx
	</select>
	<insert id="add" parameterType="entity.Fwlx">
		<selectKey keyProperty="lxid" order="AFTER" resultType="int" >
			select last_insert_id()
		</selectKey>
		insert into fwlx 
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="fwlx!=null">
				fwlx,
			</if>
		</trim>
			values
			<trim prefix="(" suffix=")" suffixOverrides=",">
				<if test="fwlx!=null">
				#{fwlx},
			</if>
			
		</trim>
	</insert>
	<update id="update" parameterType="entity.Fwlx">
				update fwlx 
			<set>
				<if test="fwlx!=null">
				fwlx=#{fwlx},
			</if>
			</set>
			where lxid=#{lxid}
	</update>
</mapper>