<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>MyServlet01</servlet-name>
		<servlet-class>com.cc.servlet.MyServlet01</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>EncodServlet</servlet-name>
		<servlet-class>com.cc.servlet.EncodServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.cc.servlet.LoginServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>FourServlet</servlet-name>
		<servlet-class>com.cc.servlet.FourServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>FourServlet</servlet-name>
		<url-pattern>/FourServlet</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>MyServlet01</servlet-name>
		<url-pattern>/MyServlet01</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>EncodServlet</servlet-name>
		<url-pattern>/EncodServlet</url-pattern>
	</servlet-mapping>


	<!-- -过滤的规则：过滤所有的请求 -->

	

	<filter>
		<filter-name>FourFilter</filter-name>
		<filter-class>com.cc.filter.FourFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>FourFilter</filter-name>
		<servlet-name>FourServlet</servlet-name>
	</filter-mapping>


	<filter>
		<filter-name>EncodeFilter</filter-name>
		<filter-class>com.cc.filter.EncodeFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>EncodeFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<filter>
		<filter-name>Filter05</filter-name>
		<filter-class>com.cc.filter.Filter05</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Filter05</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>ValueFilter</filter-name>
		<filter-class>com.cc.filter.ValueFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ValueFilter</filter-name>
		<url-pattern>/saveB.jsp</url-pattern>
	</filter-mapping>

</web-app>
